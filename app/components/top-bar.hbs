<div class='flex flex-row justify-between items-start'>
  <div>
    <h1 class='text-3xl'>
      <span class='font-bold'>{{this.today.date}} {{this.today.month}}</span>
      <span class='font-light'>{{this.today.year}}</span>
    </h1>
    <h3 class='text-xl font-light'>{{this.today.day}}</h3>
  </div>

  <div class='flex flex-row justify-items-end gap-2'>
    Sync:
    <button type='button' {{on 'click' this.syncTodaysEvents}}>Today</button>
    <button type='button' {{on 'click' this.syncTomorrowsEvents}}>Tomorrow</button>
  </div>
</div>
