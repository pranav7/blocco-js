<div class='px-10 py-2'>
  <div class='flex flex-col'>
    <TopBar />
    <div class='flex flex-row gap-2 mt-4'>
      <button type='button' {{on 'click' this.previousDay}}>&#x2190;</button>
      <button type='button' {{on 'click' this.moveToToday}}>today</button>
      <button type='button' {{on 'click' this.nextDay}}>&#x2192;</button>
    </div>
  </div>

  <div {{did-insert this.renderCalendar}} id='calendar' class='mt-4 w-80 calendar__container'>
  </div>
</div>

<Sidebar
  @title='Create block'
  @isOpen={{this.showAddEventDialog}}
  @onClose={{set this 'showAddEventDialog' false}}
>
  <div class='mt-5 flex flex-col gap-1'>
    <label for='event-name'>Name your block</label>
    <Input
      id='event-name'
      autocomplete='off'
      class='p-1 rounded-sm bg-white dark:bg-gray-800 dark:text-gray-50 border dark:border-gray-700'
      @type='text'
      @value={{this.newEventObject.title}}
    />
  </div>

  <div class='flex flex-row justify-between mt-5'>
    <div class='flex flex-col'>
      <div class='flex flex-row items-center gap-1'>
        <Input
          name="'event-type"
          @type='radio'
          @checked={{eq this.newEventObject.eventType this.eventTypes.default}}
          {{on 'click' (set this.newEventObject 'eventType' this.eventTypes.default)}}
        />
        <label for='focus-type'>Default</label>
      </div>
      <div class='flex flex-row items-center gap-1'>
        <Input
          name="'event-type"
          @type='radio'
          @checked={{eq this.newEventObject.eventType this.eventTypes.focus}}
          {{on 'click' (set this.newEventObject 'eventType' this.eventTypes.focus)}}
        />
        <label for='focus-type'>🎧 Focus</label>
      </div>
      <div class='flex flex-row items-center gap-1'>
        <Input
          name="'event-type"
          @type='radio'
          @checked={{eq this.newEventObject.eventType this.eventTypes.break}}
          {{on 'click' (set this.newEventObject 'eventType' this.eventTypes.break)}}
        />
        <label for='focus-type'>🍕 Break</label>
      </div>
    </div>
    <button type='button' class='font-semibold' {{on 'click' this.createEvent}}>Create</button>
  </div>

  <div class='mt-4'>
    <Textarea
      id='event-notes-create'
      class='event__notes'
      @value={{this.newEventObject.notes}}
      rows='6'
    />
  </div>
</Sidebar>

<Sidebar
  @title='Edit block'
  @isOpen={{this.showEditEventDialog}}
  @onClose={{set this 'showEditEventDialog' false}}
>
  <div class='mt-5 flex flex-col gap-1'>
    <label for='event-name'>Name your block</label>
    <Input
      id='edit-event-name'
      autocomplete='off'
      class='p-1 rounded-sm bg-white dark:bg-gray-800 dark:text-gray-50 border dark:border-gray-700'
      @type='text'
      @value={{this.selectedEvent.title}}
    />
  </div>

  <div class='mt-4'>
    <Textarea
      id='event-notes-edit'
      class='event__notes'
      @value={{this.selectedEvent.notes}}
      rows='6'
    />
  </div>

  <div class='flex flex-row gap-2 mt-5'>
    <button type='button' class='font-semibold' {{on 'click' this.saveEvent}}>Save</button>
    <button type='button' class='text-red-500' {{on 'click' this.deleteEvent}}>Delete</button>
  </div>
</Sidebar>
