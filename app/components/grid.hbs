<div class="bg-white dark:bg-gray-800 dark:text-gray-100 h-screen px-10">
  <div class="flex flex-col">
    <h1 class="text-3xl">
      <span class="font-bold">{{this.today.date}} {{this.today.month}}</span> <span class="font-light">{{this.today.year}}</span>
    </h1>
    <h3 class="text-xl font-light">{{this.today.day}}</h3>
  </div>

  <div {{did-insert this.renderCalendar}}
    id="calendar"
    class="mt-4 w-80"
  >
  </div>

  <Dialog
    class=''
    @as='div'
    @isOpen={{this.showAddEventDialog}}
    @onClose={{set this 'showAddEventDialog' false}}
    as |dialog|
  >
      <div class='fixed border shadow-2xl bg-white dark:bg-gray-800 inset-y-0 right-0 w-4/12 px-10 pt-4'>
        <dialog.Title class='text-lg font-medium text-gray-900 dark:text-gray-100 leading-6' @as='h3'>
          Add Event
        </dialog.Title>

        <div class='mt-5 flex flex-col gap-1'>
          <label for="event-name">Event Name</label>
          <Input id="event-name" @type="text" class="border py-1 rounded-sm"/>
        </div>

        <div class="mt-5">
          <button type="button" {{on 'click' (set this 'showAddEventDialog' false)}}>Add</button>
        </div>
      </div>
  </Dialog>
</div>