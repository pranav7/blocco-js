<div class='px-10 py-2'>
  <div class='flex flex-col'>
    <TopBar @view={{@view}} />
    <div class='flex flex-row gap-2 mt-4'>
      <button type='button' {{on 'click' this.previousDay}}>&#x2190;</button>
      <button type='button' {{on 'click' this.moveToToday}}>today</button>
      <button type='button' {{on 'click' this.nextDay}}>&#x2192;</button>
    </div>
  </div>

  <div
    {{did-insert this.renderCalendar}}
    id='calendar'
    class='mt-4 {{if (eq @view 'timeGridDay') 'w-80' 'w-full'}} calendar__container'
  >
  </div>
</div>

<Sidebar
  @title='Create block'
  @isOpen={{this.showAddEventDialog}}
  @onClose={{set this 'showAddEventDialog' false}}
>
  <div class='mt-5 flex flex-col gap-1'>
    <Textarea
      id='event-name'
      autocomplete='off'
      placeholder='Name your block'
      class='text-xl rounded-md bg-white dark:bg-gray-800 dark:text-gray-50 border-0 resize-none'
      @value={{this.newEventObject.title}}
    />
  </div>

  <div class='mt-4'>
    <Textarea
      id='event-notes-create'
      class='event__notes bg-yellow-50 dark:bg-gray-700 w-full p-2 rounded-md resize-none'
      @value={{this.newEventObject.notes}}
      rows='6'
    />
  </div>

  <div class='flex flex-row justify-between mt-5'>
    <div class='flex flex-col'>
      <div class='flex flex-row items-center gap-1'>
        <Input
          name="'event-type"
          @type='radio'
          @checked={{eq this.newEventObject.eventType this.eventTypes.default}}
          {{on 'click' (set this.newEventObject 'eventType' this.eventTypes.default)}}
        />
        <label for='focus-type'>Default</label>
      </div>
      <div class='flex flex-row items-center gap-1'>
        <Input
          name="'event-type"
          @type='radio'
          @checked={{eq this.newEventObject.eventType this.eventTypes.focus}}
          {{on 'click' (set this.newEventObject 'eventType' this.eventTypes.focus)}}
        />
        <label for='focus-type'>ğŸ§ Focus</label>
      </div>
      <div class='flex flex-row items-center gap-1'>
        <Input
          name="'event-type"
          @type='radio'
          @checked={{eq this.newEventObject.eventType this.eventTypes.break}}
          {{on 'click' (set this.newEventObject 'eventType' this.eventTypes.break)}}
        />
        <label for='focus-type'>ğŸ• Break</label>
      </div>
    </div>
    <div class='flex flex-row gap-2 items-center'>
      <div class='flex flex-row items-center gap-1'>
        <Input
          @type='checkbox'
          name="'event-all-day"
          {{on 'click' (set this.newEventObject 'allDay' (eq this.newEventObject.allDay false))}}
        />
        <label for='event-all-day'>All day</label>
      </div>
      <div>
        <button
          type='button'
          class='px-2 py-1 rounded-md bg-gray-100 hover:bg-gray-200 dark:bg-gray-600 dark:hover:bg-gray-700 font-semibold'
          {{on 'click' this.createEvent}}
        >
          Create
        </button>
      </div>
    </div>
  </div>
</Sidebar>

<Sidebar
  @title='Edit block'
  @isOpen={{this.showEditEventDialog}}
  @onClose={{set this 'showEditEventDialog' false}}
>
  <div class='mt-5 flex flex-col gap-1'>
    {{#if this.selectedEvent.isExternal}}
      <p class='text-xs text-gray-600 dark:text-gray-400'>
        Created by
        <strong>{{this.selectedEvent.creator}}</strong>
      </p>
    {{/if}}
    <Textarea
      id='edit-event-name'
      autocomplete='off'
      class='text-xl rounded-md bg-white dark:bg-gray-800 dark:text-gray-50 border-0 resize-none'
      placeholder='Name your block'
      rows='2'
      @value={{this.selectedEvent.title}}
    />
    <div class='flex flex-row gap-2'>
      <span>ğŸ“¹</span>
      <a
        class='text-sm text-gray-600 hover:text-blue-500 dark:text-gray-400 dark:hover:text-gray-500'
        href={{this.selectedEvent.meetingLink}}
      >{{this.selectedEvent.meetingLink}}</a>
    </div>
  </div>

  <div class='mt-4'>
    <Textarea
      id='event-notes-edit'
      class='event__notes bg-yellow-50 dark:bg-gray-700 w-full p-2 rounded-md resize-none'
      @value={{this.selectedEvent.notes}}
      rows='6'
    />
  </div>

  <div class='flex flex-row gap-2 mt-5'>
    <button
      type='button'
      class='px-2 py-1 rounded-md bg-gray-100 hover:bg-gray-200 dark:bg-gray-600 dark:hover:bg-gray-700 font-semibold'
      {{on 'click' this.saveEvent}}
    >Save</button>
    <button
      type='button'
      class='px-2 py-1 rounded-md bg-red-100 hover:bg-red-200 text-red-600'
      {{on 'click' this.deleteEvent}}
    >Delete</button>
  </div>
</Sidebar>
